  "homepage": "https://app-components.herokuapp.com",
  "license": "MIT",
  "peerDependencies": {
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "replace": "^1.2.0",
    "rimraf": "3.0.0",
    "style-loader": "^1.0.0",
    "styled-components": "5.1.1",
    "terser-webpack-plugin": "2.3.2",
    "url-loader": "^4.1.0",
    "warpjs": "^1.0.8",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "scripts": {
    "heroku-prebuild": "cd app && npm install",
    "start": "cd app && npm run start",
    "heroku-postbuild": "cd app && npm run build",
    "lib:build": "rimraf dist && webpack && cd app && npm run generate:docs",
    "lib:watch": "rimraf dist && webpack -w",
    "lib:version": "replace '<Version>.+</Version>' '<Version>'$npm_package_version'</Version>' ./app/src/App.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
